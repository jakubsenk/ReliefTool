@using ReliefWeb.Models
@model ReliefResult
@{
	ViewBag.Title = "Relief";
}

<h2>Result</h2>
<style>
	td, th {
		padding: 3px 5px;
	}
</style>
@if (Model != null)
{
	<p>Calculation time: @Model.Duration</p>
	<table border="1">
		<thead>
			<tr>
				<th>Best Column</th>
				<th>Score</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>@Model.BestScore.Key</td>
				<td>@Model.BestScore.Value</td>
			</tr>
		</tbody>
	</table>
	<br />
	<table border="1">
		<thead>
			<tr>
				<th>Column</th>
				<th>Score</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Model.Scores.Count; i++)
			{
				<tr>
					<td>@Model.Scores[i].Key</td>
					<td>@Model.Scores[i].Value</td>
				</tr>
			}
			@if (Model.RemovedCount != null)
			{
				<tr>
					<td colspan="2">+@Model.RemovedCount.Value removed columns</td>
				</tr>
			}
		</tbody>
	</table>
}